<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <record id="partner_finance_view_tree" model="ir.ui.view">
    	<field name="name">biote.partner.finance</field>
    	<field name="model">biote.partner.finance</field>
    	<field name="priority" eval="16"/>
    	<field name="arch" type="xml">
    		<tree string="">
				<field name="name"/>
				<field name="bank_name"/>
				<field name="account_num"/>
    		</tree>
    	</field>
    </record>

    <record id="partner_finance_view_form" model="ir.ui.view">
    	<field name="name">biote.partner.finance</field>
    	<field name="model">biote.partner.finance</field>
    	<field name="priority" eval="16"/>
    	<field name="arch" type="xml">
    		<form string="">
				<group>
					<group>
						<field name="name"/>
						<field name="bank_name"/>
						<field name="account_num"/>
						<field name="partner_id" invisible="1"/>
					</group>
				</group>
    		</form>
    	</field>
    </record>

</odoo>