<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_training_view_tree" model="ir.ui.view">
        <field name="name">biote.hr.training.view.tree</field>
        <field name="model">biote.hr.training</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="start_date" string="开始日期"/>
                <field name="end_date" string="结束日期"/>
                <field name="institution" string="培训机构"/>
                <field name="course" string="培训课程"/>
                <field name="certificate" string="证书" widget="radio" options="{'horizontal': true}"/>
            </tree>
        </field>
    </record>

    <record id="hr_training_view_form" model="ir.ui.view">
        <field name="name">biote.hr.training.view.form</field>
        <field name="model">biote.hr.training</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="start_date" string="开始日期"/>
                    <field name="end_date" string="结束日期"/>
                    <field name="institution" string="培训机构"/>
                    <field name="course" string="培训课程"/>
                    <field name="certificate" string="证书"/>
                </group>
            </form>
        </field>
    </record>
</odoo>